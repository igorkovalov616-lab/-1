using System;

struct Question
{
    public string Text;
    public string[] Answers; // –∫–æ–∂–Ω–∞ –≤—ñ–¥–ø–æ–≤—ñ–¥—å –ø–æ—á–∏–Ω–∞—î—Ç—å—Å—è –∑ "–∞) ", "–±) " —ñ —Ç.–¥.
    public char Correct;     // —Å–∏–º–≤–æ–ª –ø—Ä–∞–≤–∏–ª—å–Ω–æ—ó –≤—ñ–¥–ø–æ–≤—ñ–¥—ñ, –Ω–∞–ø—Ä–∏–∫–ª–∞–¥ '–±'
    public int Reward;

    public Question(string text, string[] answers, char correct, int reward)
    {
        Text = text;
        Answers = answers;
        Correct = correct;
        Reward = reward;
    }
}

class Program
{
    static void PlayGame()
    {
        Question[] quiz = new Question[]
        {
            new Question(
                "–Ø–∫–∞ –ø–ª–∞–Ω–µ—Ç–∞ 4 –≤—ñ–¥ –°–æ–Ω—Ü—è?",
                new string[] { "–∞) –ú–µ—Ä–∫—É—Ä—ñ–π", "–±) –ú–∞—Ä—Å", "–≤) –ó–µ–º–ª—è", "–≥) –£—Ä–∞–Ω" },
                '–±', 100),

            new Question(
                "–Ø–∫–∞ –≤–∏—Å–æ—Ç–∞ –≥–æ—Ä–∏ –ï–≤–µ—Ä–µ—Å—Ç?",
                new string[] { "–∞) 8848 –º", "–±) 5000 –º", "–≤) 10000 –º", "–≥) 7200 –º" },
                '–∞', 200),

            new Question(
                "–•—Ç–æ –∞–≤—Ç–æ—Ä —Ä–æ–º–∞–Ω—É '–ö–æ–±–∑–∞—Ä'?",
                new string[] { "–∞) –Ü–≤–∞–Ω –§—Ä–∞–Ω–∫–æ", "–±) –õ–µ—Å—è –£–∫—Ä–∞—ó–Ω–∫–∞", "–≤) –¢–∞—Ä–∞—Å –®–µ–≤—á–µ–Ω–∫–æ", "–≥) –ú–∏–∫–æ–ª–∞ –ì–æ–≥–æ–ª—å" },
                '–≤', 300),

            new Question(
                "–Ø–∫–∏–π –æ–∫–µ–∞–Ω –Ω–∞–π–±—ñ–ª—å—à–∏–π —É —Å–≤—ñ—Ç—ñ?",
                new string[] { "–∞) –ê—Ç–ª–∞–Ω—Ç–∏—á–Ω–∏–π", "–±) –Ü–Ω–¥—ñ–π—Å—å–∫–∏–π", "–≤) –ü—ñ–≤–Ω—ñ—á–Ω–∏–π –õ—å–æ–¥–æ–≤–∏—Ç–∏–π", "–≥) –¢–∏—Ö–∏–π" },
                '–≥', 400),

            new Question(
                "–°–∫—ñ–ª—å–∫–∏ –∫–æ–Ω—Ç–∏–Ω–µ–Ω—Ç—ñ–≤ –Ω–∞ –ó–µ–º–ª—ñ?",
                new string[] { "–∞) 5", "–±) 6", "–≤) 7", "–≥) 8" },
                '–≤', 500)
        };

        int total = 0;
        int numQuestions = quiz.Length;

        Console.WriteLine("==============================");
        Console.WriteLine("     –ì–†–ê: –Ø–∫ —Å—Ç–∞—Ç–∏ –º—ñ–ª—å–π–æ–Ω–µ—Ä–æ–º");
        Console.WriteLine("==============================");
        Console.WriteLine();

        for (int i = 0; i < numQuestions; i++)
        {
            Console.WriteLine($"–ü–∏—Ç–∞–Ω–Ω—è {i + 1}: {quiz[i].Text}");
            foreach (var ans in quiz[i].Answers)
                Console.WriteLine(ans);

            Console.Write("–û–±–µ—Ä—ñ—Ç—å –ø—Ä–∞–≤–∏–ª—å–Ω—É –≤—ñ–¥–ø–æ–≤—ñ–¥—å (–≤–≤–µ–¥—ñ—Ç—å –ª—ñ—Ç–µ—Ä—É, –Ω–∞–ø—Ä. –∞/–±/–≤/–≥): ");
            string input = Console.ReadLine();

            if (string.IsNullOrWhiteSpace(input))
            {
                Console.WriteLine("–ù–µ–≤—ñ—Ä–Ω–µ –≤–≤–µ–¥–µ–Ω–Ω—è. –°–ø—Ä–æ–±—É–π—Ç–µ —â–µ —Ä–∞–∑.\n");
                i--; // –ø–æ–≤—Ç–æ—Ä–∏—Ç–∏ —Ç–µ –∂ –ø–∏—Ç–∞–Ω–Ω—è
                continue;
            }

            char answer = char.ToLower(input.Trim()[0]);

            // –ù–æ—Ä–º–∞–ª—ñ–∑—É—î–º–æ —É–∫—Ä–∞—ó–Ω—Å—å–∫—ñ –ª—ñ—Ç–µ—Ä–∏ –¥–æ –Ω–∏–∂–Ω—å–æ–≥–æ —Ä–µ–≥—ñ—Å—Ç—Ä—É
            answer = char.ToLowerInvariant(answer);

            if (answer == quiz[i].Correct)
            {
                total += quiz[i].Reward;
                Console.WriteLine($"‚úÖ –ü—Ä–∞–≤–∏–ª—å–Ω–æ! –í–∏ –∑–∞—Ä–æ–±–∏–ª–∏ {quiz[i].Reward} –æ—á–æ–∫. –ó–∞–≥–∞–ª–æ–º: {total}\n");
            }
            else
            {
                // –∑–Ω–∞–π–¥–µ–º–æ —Ç–µ–∫—Å—Ç –ø—Ä–∞–≤–∏–ª—å–Ω–æ—ó –≤—ñ–¥–ø–æ–≤—ñ–¥—ñ
                string correctText = "";
                foreach (var a in quiz[i].Answers)
                {
                    if (!string.IsNullOrEmpty(a) && char.ToLowerInvariant(a[0]) == quiz[i].Correct)
                    {
                        correctText = a;
                        break;
                    }
                }

                Console.WriteLine($"‚ùå –ù–µ–ø—Ä–∞–≤–∏–ª—å–Ω–æ! –í–∏ –ø—Ä–æ–≥—Ä–∞–ª–∏. –í–∞—à –≤–∏–≥—Ä–∞—à: {total} –æ—á–æ–∫.");
                Console.WriteLine($"–ü—Ä–∞–≤–∏–ª—å–Ω–∞ –≤—ñ–¥–ø–æ–≤—ñ–¥—å: {quiz[i].Correct}) {correctText}\n");
                return;
            }
        }

        Console.WriteLine("üéâ –í—ñ—Ç–∞—î–º–æ! –í–∏ –≤—ñ–¥–ø–æ–≤—ñ–ª–∏ –Ω–∞ –≤—Å—ñ –ø–∏—Ç–∞–Ω–Ω—è.");
        Console.WriteLine($"–í–∞—à –∑–∞–≥–∞–ª—å–Ω–∏–π –≤–∏–≥—Ä–∞—à: {total} –æ—á–æ–∫.\n");
    }

    static void Main()
    {
        while (true)
        {
            PlayGame();
            Console.Write("–•–æ—á–µ—Ç–µ —Å–ø—Ä–æ–±—É–≤–∞—Ç–∏ —â–µ —Ä–∞–∑? (y/n): ");
            string choice = Console.ReadLine();
            if (string.IsNullOrWhiteSpace(choice)) break;
            char c = char.ToLower(choice.Trim()[0]);
            if (c != 'y' && c != '—Ç') // '—Ç' –¥–ª—è —É–∫—Ä–∞—ó–Ω—Å—å–∫–æ–≥–æ "—Ç–∞–∫" (–æ–ø—Ü—ñ–æ–Ω–∞–ª—å–Ω–æ)
                break;
            Console.WriteLine();
        }

        Console.WriteLine("–î—è–∫—É—î–º–æ –∑–∞ –≥—Ä—É! –î–æ –ø–æ–±–∞—á–µ–Ω–Ω—è!");
    }
}
